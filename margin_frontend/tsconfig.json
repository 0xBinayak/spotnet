{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "allowUnreachableCode": false,
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
